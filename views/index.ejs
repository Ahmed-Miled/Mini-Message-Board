<!--loop throw messages-->
<html>

<head>
  <title>Home Page</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
</head>

<body>

  <div class="header">
    <div class="title">
      Mini <span style="color: #007bff;">message</span> App
    </div>
    <div class="btn">
      <a href="/new">New message </a>
    </div>
  </div>
  <div class="container">
    <% messages.forEach((message)=>{ %>
      <div class="user">
        <p><b>Name:</b>
          <%= message.user %>
        </p>
        <p><b>Message:</b>
          <%= message.text %>
        </p>
        <p><b>date:</b>
          <%= message.added %>
        </p>

      </div>
      <% }) %>
  </div>


</body>

</html>